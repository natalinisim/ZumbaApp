<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFAEB9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dip"
        android:layout_marginLeft="200dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/maymor"
        android:contentDescription="@string/may_mor_image"
        android:minHeight="200dp"
        android:minWidth="100dp"
        android:padding="100dip"
        android:tag="maymor" />

    <ImageButton
        android:id="@+id/iMarioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="200dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/mario"
        android:contentDescription="@string/mario_image"
        android:padding="100dip"
        android:tag="shiranazran" />
<Button
    android:id="@+id/nextClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="600dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="200dip"
        android:layout_marginTop="305dip"
        android:background="@drawable/studiob"
        android:tag="nextClass">
</Button>
</RelativeLayout>